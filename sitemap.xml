---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in site.pages %}
    {% unless
        page.url contains "/page" or
        page.url contains ".css"  or
        page.url contains ".js"   or
        page.url contains ".xml"  or
        page.url contains ".html" or
        page.url contains ".txt"
    %}
    <url>
        <loc>{{ page.url | prepend: site.url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    </url>
    {% endunless %}
    {% endfor %}
    {% assign sitemaps = site.posts.size | divided_by: site.sitemap.posts_per_page | plus: 1 %}
    {% for index in (1..sitemaps) %}
    <url>
        <loc>{{ site.url }}/sitemap/sitemap-posts{{ index }}.xml</loc>
        <priority>1</priority>
    </url>
    {% endfor %}
</urlset>